<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.aptenobytes.bob">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.aptenobytes.bob.app.BobApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_bob"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bob_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:forceDarkAllowed="true"
        tools:targetApi="n">

        <activity android:name="com.aptenobytes.bob.app.presentation.NavHostActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
